@{
    ViewData["Title"] = "Welcome to HealthCare AI Chatbox";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    /* White Card Container */
    .welcome-container {
        max-width: 700px;
        width: 90%;
        padding: 40px;
        background: #ffffff;
        color: #222;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        animation: fadeIn 0.8s ease-in-out;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .welcome-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
        }

        /* Title */
        .welcome-container h1 {
            font-weight: 700;
            font-size: 2.6rem;
            margin-bottom: 20px;
            color: #222;
        }

        /* Subtitle */
        .welcome-container p {
            font-size: 1.2rem;
            line-height: 1.6;
            color: #444;
            margin-bottom: 30px;
        }

    /* Get Started Button */
    .btn-start {
        background: linear-gradient(45deg, #4facfe, #00f2fe);
        color: #fff;
        font-weight: 600;
        padding: 12px 32px;
        font-size: 1.1rem;
        border-radius: 30px;
        border: none;
        box-shadow: 0 6px 15px rgba(79, 172, 254, 0.4);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-start:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 242, 254, 0.5);
        }

    /* Icon */
    .icon {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #4facfe;
        animation: bounce 1.5s infinite;
    }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-8px);
        }
    }
</style>

<div class="welcome-container">
    <i class="fa-solid fa-heart-pulse icon"></i>
    <h1>Welcome to HealthCare AI Chatbox</h1>
    <p>
        Your personal AI assistant for healthcare questions and information.
        Get instant answers, reliable insights, and support for your health queries.
    </p>
    <a asp-controller="Home" asp-action="Login" class="btn-start">
        <i class="fa-solid fa-robot me-2"></i> Get Started
    </a>
</div>
